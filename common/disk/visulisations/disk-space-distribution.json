{
  "title": "Disk space distribution",
  "type": "pie",
  "params": {
    "shareYAxis": true,
    "addTooltip": true,
    "addLegend": true,
    "isDonut": false
  },
  "aggs": [
    {
      "id": "1",
      "enabled": true,
      "type": "sum",
      "schema": "metric",
      "params": {
        "field": "system.filesystem.total",
        "customLabel": "Total size"
      }
    },
    {
      "id": "2",
      "enabled": true,
      "type": "terms",
      "schema": "segment",
      "params": {
        "field": "system.filesystem.mount_point",
        "size": 5,
        "order": "desc",
        "orderBy": "1",
        "customLabel": "Mount point"
      }
    }
  ],
  "listeners": {}
}
